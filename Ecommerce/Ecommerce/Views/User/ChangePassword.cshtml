@using Model.EF
@model Model.EF.User
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    User user = new User();
    EcommerceContext db = new EcommerceContext();
    int id = int.Parse(Request.Cookies["IdUser"].Value);
    var acc = from e in db.Users
              where e.Id == id
              select e;
}
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row mt-3">
            <div class="col-lg-2">
                <aside class="aa-sidebar">
                    <!-- single sidebar -->
                    <div class="aa-sidebar-widget">
                        <div class="aa-sidebar-account">
                            @{
                                if (@acc.FirstOrDefault().Images.FirstOrDefault() == null)
                                {
                                    <img class="icon-user" src="~/Assets/User/images/Avatar/thangngo.png" alt="avatar " />
                                }
                                else
                                {
                                    <img class="icon-user" src="~/Assets/images/UploadFile/@acc.FirstOrDefault().Images.FirstOrDefault().ImageFile.FileName" alt="avatar " />
                                }
                            }
                            <div class="user-name">
                                <h2>
                                    <a href="/customer/edit">@acc.FirstOrDefault().Name</a>
                                </h2>

                            </div>
                        </div>

                        <ul class="aa-catg-nav ">
                            <li>
                                <a href="/user/edit/@acc.FirstOrDefault().Id "> <img src="~/Assets/User/images/user.png " alt="avatar " />Quản lí tài khoản</a>
                            </li>
                            <li>
                                <a href="#"><img src="~/Assets/User/images/list.png " alt="avatar " />Quản lí đơn hàng</a>
                            </li>
                        </ul>
                    </div>
                </aside>
            </div>
            <section class="shop checkout section ">
                <div class="container ">
                    <div class="row ">
                        @using (Html.BeginForm("Password", "User", FormMethod.Post))
                        {
                            <form class="form " method="post" action="#" >
                                <div class="col-lg-12 col-12 ">
                                    <div class="checkout-form ">
                                        <h2 class="checkout-form-title">Thay đổi mật khẩu</h2>

                                        <!-- Form -->

                                        <div class="row ">
                                            <div class="col-lg-6 col-md-6 col-12 ">
                                                <div class="form-group ">
                                                    <label for="password">Mật khẩu mới</label> <input id="password" class="form-control" type="password" name="password" placeholder="Password*" value="" autocomplete="off" required>

                                                </div>

                                            </div>
                                            <div class="col-lg-6 col-md-6 col-12 ">
                                                <div class="form-group ">
                                                    <label for="confirm_password">Xác nhận mật khẩu mới</label> <input id="confirm_password" class="form-control" onkeyup="checkPass()" type="password" name="confirm_password" placeholder="Confirm Password*"
                                                                                                                       value="" autocomplete="off" required>
                                                    <span id='message'></span>
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                @Html.HiddenFor(model => model.Id)
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-12 ">
                                                <div class="content">
                                                    <div class="button">
                                                        @* @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                                        @* @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", id = "password", placeholder = "", @style = "width: 100%;height: 45px;line - height: 50px;padding: 0 20px;border - radius: 3px; border - radius: 0px;color: #333 !important;border: none;background: #F6F7FB;" } })*@
                                                        <input type="submit" name="btnUpdate" id="btnUpdate" class="btn" value="Save" disabled/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </form>
                        }
                        <!--/ End Button Widget -->
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<script>
    function checkPass() {
        if (document.getElementById('password').value == document
            .getElementById('confirm_password').value) {
            document.getElementById('message').style.color = 'green';
            document.getElementById('message').innerHTML = 'matching';
            document.getElementById('btnUpdate').disabled = false;
        } else {
            document.getElementById('message').style.color = 'red';
            document.getElementById('message').innerHTML = 'not matching';
            document.getElementById('btnUpdate').disabled = true;
        }
    }
</script>

