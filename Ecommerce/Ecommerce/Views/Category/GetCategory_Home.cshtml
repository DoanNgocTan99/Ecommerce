@model  List<Model.EF.Category>
@{
    long categoryid = 13;
    if (ViewBag.categoryid != null)
    {
        categoryid = ViewBag.categoryid;
    }
}


@foreach (var item in Model)
{
    if (item.Id == categoryid)
    {
        <li class="nav-item">
            @{
                categoryid = item.Id;
            }
            <a href="/products/ProductList"><img class="category-img" src="@Html.Action("getImgCat","image", new { id = item.Id })" alt="category" />@item.Name</a>

            @*@Html.ActionLink(item.Name, "ProductList", "Products", new { @class = "nav-link", category_id = item.Id }, null)*@
        </li>
    }
    else
    {
        <li class="nav-item">
            @{
                categoryid = item.Id;
            }
            <a href="/products/ProductList" ><img class="category-img" src="@Html.Action("getImgCat","image", new { id = item.Id })" alt="category" />@item.Name</a>

            @*@Html.ActionLink(item.Name, "ProductList", "Products", new { @class = "nav-link", category_id = item.Id }, null)*@
        </li>
    }



}
