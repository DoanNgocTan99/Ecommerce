@using Model.EF
@model Model.EF.Shop
@{
    ViewBag.Title = "ShopView";
    Shop shop = @ViewBag.shop;
    var productList = @ViewBag.productList;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section>
    <input id="shopid" type="hidden" value="@Model.Id />
</section>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col-lg-4">
                <aside class="aa-sidebar-shop">
                    <!-- single sidebar -->
                    <div class="aa-sidebar-widget">
                        <div class="aa-sidebar-account-shop">
                            <a class="shop-image" href="#">
                                <img class="icon-shop" src="../assets/images/Shop/shop1.jpg " alt="avatar " />
                            </a>
                            <div class="shop-name">
                                <h2>@shop.Name</h2>
                                <span class="value">@shop.Address</span>

                            </div>
                            <div class="clr"></div>
                        </div>


                    </div>
                </aside>
            </div>
            <div class="col-lg-3">
                <aside class="aa-sidebar-shop2">
                    <!-- single sidebar -->
                    <div class="aa-sidebar-widget">
                        <div class="aa-sidebar-account-shop">
                            <h3><a href="#"><i class="ti-bag">Sản phẩm: </i></a><span class="value">@productList.Count<span></h3>
                        </div>
                        <div class="aa-sidebar-account-shop">
                            <h3><i class="ti-star">Đánh giá:  <span class="value"></span></i></h3>
                        </div>

                    </div>
                </aside>
            </div>
            <div class="col-lg-3">
                <aside class="aa-sidebar-shop2">
                    <!-- single sidebar -->
                    <div class="aa-sidebar-widget">
                        <div class="aa-sidebar-account-shop">
                            <h3><i class="ti-comment-alt">Tỉ lệ phản hồi chat:  <span class="value">10</span></i></h3>
                        </div>
                        <div class="aa-sidebar-account-shop">
                            <h3><i class="ti-heart">Người theo dõi:  <span class="value">10</span></i></h3>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
        <div class="row mt-4">
            <section id="aa-promo">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="aa-promo-area">
                                <h1 class="aa-promo-area-shoptitle">
                                    <i class="fas fa-clinic-medical"></i>Thông tin shop
                                </h1>
                                <div class="row">

                                    <!-- promo left -->
                                    <div class="col-md-5 no-padding">
                                        <div class="aa-promo-left">
                                            <a href="#">
                                                <div class="aa-promo-banner">
                                                    <img src="@Html.Action("getimage", "image", new { id = @shop.Id  })" alt="Laptop Asus VivoBook X509MA" style="max-width: 100%; max-height: 100%;">
                                                    <div class="aa-prom-content">

                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <!-- promo right -->
                                    <div class="col-md-7 no-padding">
                                        <div class="aa-promo-right">

                                            <div class="aa-single-promo-right">
                                                <h4 class="shop-name-description">
                                                    <a href="#"><i class="fab fa-shopify">@shop.Name</i></a>
                                                </h4>
                                            </div>
                                            <div class="aa-single-promo-right">
                                                <p>@shop.Description</p>
                                            </div>
                                            <div class="aa-single-promo-right">

                                            </div>
                                            <div class="aa-single-promo-right">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        @Html.Action("ProductListOfShops", "Products", new { shopId = @Model.Id})

       
    </div>
</div>
<script>
    function checkPass() {
        if (document.getElementById('password').value == document
            .getElementById('confirm_password').value) {
            document.getElementById('message').style.color = 'green';
            document.getElementById('message').innerHTML = 'matching';
            document.getElementById('btnUpdate').disabled = false;
        } else {
            document.getElementById('message').style.color = 'red';
            document.getElementById('message').innerHTML = 'not matching';
            document.getElementById('btnUpdate').disabled = true;
        }
    }
</script>

