
@{
    ViewBag.Title = "ViewDetail";
    Layout = "~/Areas/Seller/Views/Shared/_Layout.cshtml";
    decimal SumPrice = 0;
    int i = 1;
    Ecommerce.Areas.Seller.Models.MyOrder myOrder = Model.FirstOrDefault();
    foreach (var item in Model)
    {
        SumPrice += item.Price * item.Amount;
    }
}

@model PagedList.IPagedList<Ecommerce.Areas.Seller.Models.MyOrder>
@using PagedList.Mvc;

@section header{
    Quản Lý Đơn Hàng
}
@section jsFooter{
    <script src="~/Assets/Shop/js/controller/ProductController.js"></script>
}
<div class="row">
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-body">
                @using (Html.BeginForm("ViewDetail", "Order", FormMethod.Post))
                {
                    <div class="row form-group">
                        <div class="col-md-4 form-group">
                            <input type="text" value="@ViewBag.SearchString" class="form-control bg-light border-0 small" placeholder="Search for..." name="searchString" />
                        </div>
                        <div class="col-md-4 form-group">
                            <button class="btn btn-success" type="submit">
                                Tìm kiếm
                            </button>
                        </div>
                    </div>
                }
                <hr />
                <h5>CHI TIẾT SẢN PHẨM</h5>
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Số lượng</th>
                                <th>Giá</th>
                            </tr>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.Id">
                                    <td>@(i++)</td>
                                    <td>@item.NameProduct</td>
                                    <td>@item.Amount</td>
                                    <td>@item.Price</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("ViewDetail", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <hr />
                <h5>THÔNG TIN KHÁCH HÀNG</h5>
                <div class="container rounded bg-white mt-1 mb-1">
                    <div class="row">
                        <div class="col-md-5 border-success">
                            <div class="p-3 py-5">
                                <div class="row mt-5">
                                    <div class="col-md-6">
                                        <span class="label label-primary ">Mã đơn hàng:</span>
                                        <span class="label label-primary ">@myOrder.Id</span>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <span class="label label-primary ">Người mua: </span>
                                        <span class="label label-primary ">@myOrder.NameUser</span>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="label label-primary">Email:</label>
                                        <label class="labels">@myOrder.Email</label>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="label label-primary">Số điện thoại:</label>
                                        <label class="labels">@myOrder.PhoneNumber</label>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="label label-primary">Ghi chú:</label>
                                        <label class="labels">@myOrder.Message</label>
                                    </div>
                                </div>
                                <div class="row mt-3">

                                    <div class="row mt-2">
                                        <div class="col-md-12">
                                            <label class="label label-primary">Tổng Tiền:</label>
                                            <label class="labels">@SumPrice</label>
                                        </div>
                                    </div>
                                    <div class="row mt-1">
                                        <div class="col-md-12">
                                            <label class="label label-primary">Trạng thái thanh toán:</label>
                                            <label class="labels">@myOrder.CheckoutStatus</label>
                                        </div>
                                        <div class="col-md-12 ">
                                            <label class="label label-primary">Hình thức thanh toán:</label>
                                            <label class="labels">@myOrder.NamePayment</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">

                                    <div class="col-md-4">
                                        <div class="col-md-12">
                                            <label class="label label-primary">Trạng thái đơn hàng:</label>
                                            <label class="labels">@myOrder.DeliveryStatus</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        @*@Html.PagedListPager(Model, page => Url.Action("ViewDetail", new { page, @searchString = @ViewBag.SearchString }))*@
    </div>
</div>



